{
    "extends": [
        "eslint-plugin-vue",
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["warn", "single"],
        "semi": ["warn", "never"],
        "comma-dangle": ["warn", "always-multiline"],
        "vue/html-self-closing": 0,
        "vue/html-indent": 0,
        "vue/max-attributes-per-line": 0,
        "vue/require-default-prop": 0,
        "vue/singleline-html-element-content-newline": 0
    }
}
